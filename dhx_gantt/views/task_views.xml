<odoo>
    <data>

        <record id="task_gantt_view" model="ir.ui.view">
            <field name="name">Tasks Gantt</field>
            <field name="model">project.task</field>
            <field name="priority">10</field>
            <field name="type">dhx_gantt</field>
            <field name="arch" type="xml">
                <dhx_gantt
                        id_field="id"
                        text="name"
                        date_start="date_start"
                        duration="planned_duration"
                        group_by="project_id"
                        date_deadline="date_deadline"
                        links_serialized_json="links_serialized_json"
                        link_model="project.depending.tasks"
                />
            </field>
        </record>

        <record id="view_task_gantt_data_form" model="ir.ui.view">
            <field name="name">project.task.gant.data.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <!-- <field name="planned_duration"/> -->
                    <!-- <field name="lag_time"/> -->
                </xpath>
                <xpath expr="//page[@name='description_page']" position="after">
                    <page string="Dependencies">
                        <group string="Gantt Info">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="planned_duration"/>
                        </group>
                        <separator string="Predecessors"/>
                        <field name="dependency_task_ids">
                            <tree editable="buttom">
                                <field name="project_id" invisible="1"/>
                                <field name="task_id" domain="[('project_id', '=', project_id)]"/>
                                <field name="relation_type"/>
                            </tree>
                        </field>
                        <separator string="Successors"/>
                        <field name="depending_task_ids">
                            <tree editable="buttom">
                                <field name="project_id" invisible="1"/>
                                <field name="depending_task_id" domain="[('project_id', '=', project_id)]"/>
                                <field name="relation_type"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph,dhx_gantt</field>
        </record>

        <record id="project.action_view_task" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph,dhx_gantt</field>
        </record>


        <record id="task_gantt_inherit_view_by_user" model="ir.ui.view">
            <field name="name">task.gantt.inherit.view.by.user</field>
            <field name="model">project.task</field>
            <field name="priority">11</field>
            <field name="type">dhx_gantt</field>
            <field name="arch" type="xml">
                <dhx_gantt
                        id_field="id"
                        text="name"
                        date_start="date_start"
                        duration="planned_duration"
                        group_by="user_id"
                        date_deadline="date_deadline"
                        links_serialized_json="links_serialized_json"
                        link_model="project.depending.tasks"
                />
            </field>
        </record>

        <record id="action_gantt_chart_by_user" model="ir.actions.act_window">
            <field name="name">By user</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">dhx_gantt</field>
            <field name="view_id" ref="task_gantt_inherit_view_by_user"/>
            <!-- <field name="search_view_id" ref="project.view_task_search_form"/> -->
        </record>

        <record id="action_gantt_chart_by_project" model="ir.actions.act_window">
            <field name="name">By Project</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">dhx_gantt</field>
            <!--            <field name="search_view_id" ref="project.view_task_search_form"/>-->
        </record>


        <menuitem id="menu_gantt_chart"
                  name="Gantt Chart"
                  parent="project.menu_main_pm"/>
        <menuitem id="menu_gantt_chart_by_user"
                  name="By user"
                  parent="menu_gantt_chart"
                  action="action_gantt_chart_by_user"/>
        <menuitem id="menu_gantt_chart_by_project"
                  name="By Project"
                  parent="menu_gantt_chart"
                  action="action_gantt_chart_by_project"/>

    </data>
</odoo>
